doctype html
html(lang="en" ng-app='notiv8tr')
head
  title Notiv8tr
  style
    |.unit-square {
    |    width:1em;
    |    height:1em;
    |    background:green;
    |    display:inline-block;
    |    margin:1px 1px 1px 1px;
    |}
    |.header-one {
    |    font-weight:bold;
    |    font-family: Sans-Serif;
    |    color:#0f0f3f;
    |    margin:0px 0 5px 0;
    |}
    |.well {
    |    background:#dddde0;
    |    margin:0 0 5px 0;
    |    padding:5px;
    |}
    link(rel='stylesheet', type='text/css', href='http://yui.yahooapis.com/pure/0.5.0/pure-min.css')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel='stylesheet')
  body(ng-init="projects=[{'name': 'Exercise', 'progress': [{}, {}, {}, {}, {}, {}]}, {'name': 'Owen, Biblical Theology', 'progress': [{}, {}, {}]}]")
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js')
    script(type='text/javascript')
      |/*var app = */angular.module('notiv8tr', []);
    .well(ng-repeat='project in projects')
      .pure-g
        .pure-u-1.pure-u-md-1-3
          .header-one(ng-bind='project.name')
        .pure-u-1.pure-u-md-2-3
          div
            span.unit-square(ng-repeat='note in project.progress')  
          button.pure-button.pure-button-primary(ng-click='project.progress.push({})')
            i.fa.fa-plus
            | Note Progress

